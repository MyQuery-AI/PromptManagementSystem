generator PrismaClient {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum Role {
  Owner
  Admin
  Developer
}

enum Permission {
  MANAGE_USERS
  MANAGE_USER_ROLES
  VIEW_PROMPTS
  CREATE_PROMPTS
  EDIT_PROMPTS
  DELETE_PROMPTS
  MANAGE_SYSTEM
}

model User {
  id              String           @id @default(cuid())
  email           String           @unique
  emailConfirmed  Boolean          @default(false)
  password        String
  name            String?
  otp             String?
  otpId           String?          @unique
  otpExpiresAt    DateTime?
  role            Role             @default(Developer)
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt
  userPermissions UserPermission[]

  @@map("users")
}

model UserPermission {
  id         Int        @id @default(autoincrement())
  userId     String
  permission Permission
  isRevoked  Boolean    @default(false)
  createdAt  DateTime   @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, permission])
  @@map("user_permissions")
}

model Prompt {
  id           Int      @id @default(autoincrement())
  promptTypeId String // Type of prompt foreign key
  version      String   @default("v1") // prompt version
  content      String // actual prompt content
  isActive     Boolean  @default(true) // active version toggle
  createdBy    String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  promptType PromptType @relation(fields: [promptTypeId], references: [id], onDelete: Cascade)

  @@map("prompts")
}

model PromptType {
  id        String   @id @default(cuid())
  name      String   @unique // Name of the prompt type
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  color     String   @default("gray")
  bgColor   String   @default("bg-gray-100")
  textColor String   @default("text-gray-800")
  usage     String   @default("General Use")
  icon      String?  @default("üìù")
  prompts   Prompt[]

  @@map("prompt_types")
}
